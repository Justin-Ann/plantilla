RewriteEngine On
RewriteBase /HRIS/

# Handle API requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# Serve index.html for root
RewriteRule ^$ index.html [L]

# Allow PHP files
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>
